{
  "expo": {
    "name": "FastTrack",
    "slug": "FastTrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/fasttrack-icon.png",
    "scheme": "fasttrack",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.anthonyhorner.fasttrack",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "FastTrack uses your location to measure vehicle speed and distance for acceleration timing.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "FastTrack uses your location to measure vehicle speed and distance for acceleration timing.",
        "NSMotionUsageDescription": "FastTrack uses motion sensors to enhance speed measurement accuracy.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/fasttrack-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anthonyhorner.fasttrack"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-maps",
        {
          "iosProvider": "apple"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}